<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        tools:context=".ui.home.HomeFragment">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/CustomFontStyleCart"
            android:id="@+id/toolbar"
            app:theme="@style/CustomToolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_cart"/>

        <!-- Recycler layout -->
        <androidx.recyclerview.widget.RecyclerView
            android:gravity="top"
            android:id="@+id/recycler_view_cart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@+id/ll_order_summary"
            />
            <LinearLayout
                android:id="@+id/ll_order_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:text="Order details"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/cart_sub_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:text="Sub Total : $235"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/cart_total_taxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:text="Taxes and Charges : 40 "
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/grand_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:textSize="20sp"
                        android:text="Total: 40 "
                        android:textStyle="bold"
                        android:layout_weight="0.5"/>
                    <Button
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/checkout_button"
                        android:text="$ Check out"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>